{
  "name": "life-makers-pirates",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:web": "expo export --platform web",
    "build:web-static": "expo export --platform web --output-dir web-build",
    "preview:web": "npx serve web-build",
    "deploy:vercel": "vercel --prod",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "build:android": "eas build --platform android",
    "build:android-demo": "eas build --platform android --profile demo",
    "build:android-preview": "eas build --platform android --profile preview",
    "build:android-dev": "eas build --platform android --profile standalone",
    "build:android-standalone": "eas build --platform android --profile standalone",
    "build:ios": "eas build --platform ios",
    "build:all": "eas build --platform all",
    "dev:android": "npx expo run:android",
    "dev:ios": "npx expo run:ios"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.3.15",
    "@react-navigation/native": "^7.1.11",
    "@react-navigation/stack": "^7.3.4",
    "@supabase/supabase-js": "^2.50.0",
    "expo": "~53.0.11",
    "expo-dev-client": "~5.2.1",
    "expo-device": "^7.1.4",
    "expo-document-picker": "~13.1.6",
    "expo-image-picker": "~16.1.4",
    "expo-json-utils": "^0.15.0",
    "expo-localization": "^16.1.5",
    "expo-notifications": "^0.31.3",
    "expo-status-bar": "~2.2.3",
    "expo-system-ui": "^5.0.9",

    "i18next": "^25.2.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-i18next": "^15.5.3",
    "react-native": "^0.79.4",
    "react-native-calendars": "^1.1312.1",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "^4.11.1",
    "react-native-web": "^0.20.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~19.0.10",
    "typescript": "~5.8.3"
  },
